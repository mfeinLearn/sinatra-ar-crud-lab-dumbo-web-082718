<form action="/posts/<%= @post.id %>" method="post" class="blog-form">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <div class="blog-form">
    <label>Enter your name: </label>
    <input type="text" value = "<%=@post.name%>" name = "post[name]" id = "name"/>
  </div>
  <div class="blog-form">
    <label>Enter your content: </label>
    <input type="text" value = "<%=@post.content%>"  name = "post[content]" id = "content"/>
  </div>
  <div class="blog-form">
    <input type="submit" value="submit">
  </div>
</form>
